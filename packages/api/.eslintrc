{
  "extends": ["@iteam/eslint-config-node"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "excludedFiles": ["**/__tests__/*", "**/__generated__/*"],
      "rules": {
        "no-undef": "error",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
          "error",
          {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": true,
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_"
          }
        ],
        "space-before-function-paren": "off",
        "require-atomic-updates": "off"
      }
    }
  ],
  "rules": {
    "no-unexpected-multiline": "error"
  }
}
